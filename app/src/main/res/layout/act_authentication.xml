<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_100"
        android:background="#3C8DF6"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_45"
            android:layout_marginTop="@dimen/dip_20">

            <ImageView
                android:id="@+id/logon_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dip_10"
                android:paddingTop="@dimen/dip_10"
                android:paddingRight="@dimen/dip_20"
                android:paddingBottom="@dimen/dip_10"
                android:src="@mipmap/icon_blck_back"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dip_15"
                android:textColor="@color/white" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_30"
            android:layout_marginRight="@dimen/dip_30"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/icon_renzhen1" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dip_1"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dip_2"
                        android:layout_marginRight="@dimen/dip_2"
                        android:background="#D9D9D9" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/myrenzhen2" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dip_1"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dip_2"
                        android:layout_marginRight="@dimen/dip_2"
                        android:background="#D9D9D9" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTitle3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/myrenzhen3" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dip_1"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dip_2"
                        android:layout_marginRight="@dimen/dip_2"
                        android:background="#D9D9D9" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvTitle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/myrenzhen4" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.chaojidaikuan.daikuanguowai.ui.view.NoScrollViewPager
        android:id="@+id/myViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
