<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_showData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dip_280"
                        android:background="@mipmap/ymfq_pic_top_bg" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="@dimen/dip_30">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dip_30"
                                android:background="#20000000"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/dip_15"
                                    android:layout_height="@dimen/dip_15"
                                    android:layout_marginLeft="@dimen/dip_10"
                                    android:src="@mipmap/home_icon_carousel" />

                                <com.chaojidaikuan.daikuanguowai.ui.view.ScrollTextViewView
                                    android:id="@+id/tv_auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dip_5" />
                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/top_desc_dz"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:text="testtetesttestteststtest"
                                android:textColor="#FEF9F2"
                                android:textSize="@dimen/fond_17sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/top_desc_fq"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:text="testtetesttestteststtest"
                                android:textColor="#FEF9F2"
                                android:textSize="@dimen/fond_17sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical"
                                android:paddingLeft="@dimen/dip_10"
                                android:paddingTop="@dimen/dip_3"
                                android:paddingRight="@dimen/dip_10"
                                android:paddingBottom="@dimen/dip_3">

                                <TextView
                                    android:id="@+id/top_hint_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/dip_5"
                                    android:drawableLeft="@mipmap/icon_dian"
                                    android:drawablePadding="@dimen/dip_5"
                                    android:text="Pinjam dengan KTP"
                                    android:textColor="#FEF9F2"
                                    android:textSize="@dimen/fond_11sp" />


                                <TextView
                                    android:id="@+id/top_hint_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/dip_5"
                                    android:drawableLeft="@mipmap/icon_dian"
                                    android:drawablePadding="@dimen/dip_5"
                                    android:text="Bunga Harian Minimum 0.05% per hari"
                                    android:textColor="#FEF9F2"
                                    android:textSize="@dimen/fond_11sp" />

                                <TextView
                                    android:id="@+id/top_hint_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/dip_5"
                                    android:drawableLeft="@mipmap/icon_dian"
                                    android:drawablePadding="@dimen/dip_5"
                                    android:text="Bunga Harian Minimum 0.05% per hari"
                                    android:textColor="#FEF9F2"
                                    android:textSize="@dimen/fond_11sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="@dimen/dip_10"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="@dimen/dip_10"
                            android:background="@drawable/center_bg"
                            android:elevation="@dimen/dip_4"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/dip_20">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dip_20"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_describle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:maxLines="2"
                                    android:paddingLeft="@dimen/dip_10"
                                    android:paddingRight="@dimen/dip_10"
                                    android:text="最高可借额度"
                                    android:textColor="#9DA4B7"
                                    android:textSize="@dimen/fond_15sp" />

                                <LinearLayout
                                    android:id="@+id/ll_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_limitmoney"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:singleLine="true"
                                        android:text="rp 0.000"
                                        android:textColor="#3C8DF6"
                                        android:textSize="40sp" />

                                    <pl.droidsonroids.gif.GifImageView
                                        android:id="@+id/myGif"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom"
                                        android:src="@drawable/icon_timg" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lijijieqian"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dip_20"
                                android:layout_marginRight="@dimen/dip_20"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="@dimen/dip_10"
                                    android:text="以上金额不包含各项费用，详见费用说明"
                                    android:textColor="#CED2DB"
                                    android:textSize="@dimen/fond_11sp"
                                    android:visibility="gone" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/center_bg2"
                                    android:orientation="vertical"
                                    android:padding="@dimen/dip_10"
                                    android:visibility="gone">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:id="@+id/loan_qs_desc"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Batas Waktu Pinjaman"
                                            android:textColor="#9DA4B7"
                                            android:textSize="@dimen/fond_13sp" />

                                        <TextView
                                            android:id="@+id/qishu"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:text="4期"
                                            android:textColor="@color/title"
                                            android:textSize="@dimen/fond_13sp" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dip_13">

                                        <TextView
                                            android:id="@+id/yue_fee_desc"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Peringkat Bulanan"
                                            android:textColor="#9DA4B7"
                                            android:textSize="@dimen/fond_13sp" />

                                        <TextView
                                            android:id="@+id/yue_fee"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:text="1.8%"
                                            android:textColor="@color/title"
                                            android:textSize="@dimen/fond_13sp" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dip_13">

                                        <TextView
                                            android:id="@+id/fee_desc"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="biaya"
                                            android:textColor="#9DA4B7"
                                            android:textSize="@dimen/fond_13sp" />

                                        <TextView
                                            android:id="@+id/view_desc"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:drawableRight="@mipmap/ymfq_pic_particulars_arrows"
                                            android:text="rinciannya"
                                            android:textColor="@color/title"
                                            android:textSize="@dimen/fond_13sp" />
                                    </RelativeLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dip_10"
                                    android:visibility="gone">

                                    <TextView
                                        android:id="@+id/xieyiRadio"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawableLeft="@drawable/home_radio"
                                        android:drawablePadding="@dimen/dip_5"
                                        android:text="我已同意和阅读"
                                        android:textColor="#9DA4B7"
                                        android:textSize="@dimen/fond_10sp" />

                                    <TextView
                                        android:id="@+id/userXieyi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="《借款服务相关协议》"
                                        android:textColor="@color/title"
                                        android:textSize="@dimen/fond_10sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/huankuanxiansi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dip_20"
                                android:layout_marginRight="@dimen/dip_20"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="@dimen/dip_10"
                                    android:text="JANGKA WAKTU PINJAMAN"
                                    android:textColor="#1E2429"
                                    android:textSize="@dimen/fond_15sp" />

                                <TextView
                                    android:id="@+id/tv_days"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:singleLine="true"
                                    android:paddingBottom="@dimen/dip_10"
                                    android:textColor="#3C8DF6"
                                    android:textSize="30sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dip_1"
                                    android:layout_marginLeft="@dimen/dip_10"
                                    android:layout_marginRight="@dimen/dip_10"
                                    android:background="#DDE0E2" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/dip_10">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="JUMLAH PELUNASAN"
                                            android:textColor="#5E5F60"
                                            android:textSize="@dimen/fond_13sp" />

                                        <TextView
                                            android:id="@+id/tv_refundamount"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:text="Rp.1.000.000"
                                            android:textColor="#5E5F60"
                                            android:textSize="@dimen/fond_13sp" />
                                    </RelativeLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dip_13">

                                        <TextView
                                            android:layout_weight="2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="TANGGAL PEMBAYARAN KEMBALI"
                                            android:textColor="#5E5F60"
                                            android:textSize="@dimen/fond_13sp" />

                                        <TextView
                                            android:id="@+id/tv_deadline"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:text="05-02-2020"
                                            android:textColor="#5E5F60"
                                            android:textSize="@dimen/fond_13sp" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dip_10"
                                    android:visibility="gone">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawableLeft="@drawable/home_radio"
                                        android:drawablePadding="@dimen/dip_5"
                                        android:text="我已同意和阅读"
                                        android:textColor="#9DA4B7"
                                        android:textSize="@dimen/fond_10sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="《借款服务相关协议》"
                                        android:textColor="@color/title"
                                        android:textSize="@dimen/fond_10sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/bt_tvtv"
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:layout_marginLeft="40dp"
                                android:layout_marginTop="@dimen/dip_10"
                                android:layout_marginRight="40dp"
                                android:background="@drawable/btn_allshap"
                                android:gravity="center"
                                android:textColor="#fff"
                                android:textSize="16sp"
                                android:visibility="visible" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/tv_card_no"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="30dp"
                                    android:text="******"
                                    android:textColor="#5A617A" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="30dp"
                                    android:text="金卡"
                                    android:textColor="#5A617A" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="40dp"
                                    android:drawableLeft="@mipmap/getperson"
                                    android:text="持卡人"
                                    android:textColor="#5A617A" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="20dp"
                                    android:drawableLeft="@mipmap/card_item"
                                    android:text="卡类型"
                                    android:textColor="#5A617A" />
                            </RelativeLayout>


                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dip_10"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <com.youth.banner.Banner
                        android:id="@+id/banner_auto"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginLeft="@dimen/dip_10"
                        android:layout_marginRight="@dimen/dip_10" />

                    <LinearLayout
                        android:id="@+id/my_shouwtubiao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dip_30"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/dip_40"
                            android:layout_height="@dimen/dip_40"
                            android:background="@mipmap/ymfq_icon_examine" />

                        <ImageView
                            android:layout_width="@dimen/dip_40"
                            android:layout_height="@dimen/dip_40"
                            android:layout_marginLeft="@dimen/dip_50"
                            android:background="@mipmap/ymfq_icon_loan" />

                        <ImageView
                            android:layout_width="@dimen/dip_40"
                            android:layout_height="@dimen/dip_40"
                            android:layout_marginLeft="@dimen/dip_50"
                            android:background="@mipmap/ymfq_icon_lifting_amount" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/waring"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dip_80"
                        android:layout_marginTop="@dimen/dip_20"
                        android:layout_marginRight="@dimen/dip_80"
                        android:text="*只面向22岁以上非学生人群*"
                        android:textColor="#9DA4B7"
                        android:textSize="10sp" />
                </LinearLayout>

            </LinearLayout>

            <com.mingle.widget.LoadingView
                android:id="@+id/loadView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dip_580" />
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>